<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardKelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNo"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="No : 1 "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/tvKelas"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="Kelas : X Broadcast "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_below="@id/tvNo"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tvKompetensi"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="Kompetensi : Broadcasting "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tvKelas"
                android:layout_marginBottom="15dp"/>

            <ImageButton
                android:id="@+id/btnHapus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/delete"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="35dp"/>

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/edit"
                android:layout_toLeftOf="@id/btnHapus"
                android:layout_marginRight="5dp"
                android:layout_marginTop="35dp"/>

            <ImageButton
                android:id="@+id/btnLihat"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_search"
                android:layout_toLeftOf="@id/btnEdit"
                android:layout_marginRight="5dp"
                android:layout_marginTop="35dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>